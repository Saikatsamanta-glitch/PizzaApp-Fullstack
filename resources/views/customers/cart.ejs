<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs')%>

    <body>
        <%- include('../partials/navbar.ejs')%>

            <section class="cart py-16">
                <% if(session.cart){ %>
                    <div class="orders container mx-auto w-1/2">
                        <div class="flex items-center border-b border-grey-300 pb-4">
                            <img src="/img/cart-black.png" alt="">
                            <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
                        </div>


                        <div class="pizza-list">
                            <% for(let pizza of Object.values(session.cart.items)){ %>
                                <div class="flex items-center my-8">
                                    <img class="w-24" src="/img/<%= pizza.item.image %>" alt="">
                                    <div class="flex-1 ml-4">
                                        <h1>
                                            <%= pizza.item.name%>
                                        </h1>
                                        <span>
                                            <%= pizza.item.size%>
                                        </span>
                                    </div>
                                    <span class="flex-1">
                                        <%= pizza.qty %> Pcs
                                    </span>
                                    <span class="font-bold text-lg">‚Çπ<%= pizza.item.price%></span>
                                </div>
                                <% } %>
                        </div>

                        <hr>


                        <div class="text-right py-4">
                            <div>
                                <span class="text-lg font-bold">Total amount:</span>
                                <span class="amount text-2xl font-bold ml-2">‚Çπ<%= session.cart.totalPrice%></span>
                            </div>
                            <div>
                                <form action="" class="mt-12">
                                    <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text"
                                        placeholder="Phone Number">

                                    <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                                    <div>
                                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6"
                                            type="submit">Order Now</button>
                                    </div>

                                </form>
                            </div>
                            <!-- <a href="" class="btn-primary inline-block cursor-pointer px-6 py-2 rounded-full text-white font-bold mt-6">Login to Continue</a> -->
                        </div>
                    </div>
                    <% }else{ %>
                        <div class="empty-cart py-16">
                            <div class="container mx-auto text-center">
                                <h1 class="text-3xl font-bold mb-2">Cart Empty üò£</h1>
                                <p class="text-gray-500 text-lg">You Probably haven't ordered a pizza yet. <br>
                                    To order a pizzaüçï, go to the main page
                                </p>
                                <lottie-player class="mx-auto"
                                    src="https://assets5.lottiefiles.com/packages/lf20_w3ii0hq6.json"
                                    background="transparent" speed="1"
                                    style="width: 800px; height: 500px; ;padding:0px;" loop autoplay>
                                </lottie-player>

                                <a href="/"
                                    class="go-back inline-block px-6 rounded-full btn-primary text-white font-bold mt-12">Go
                                    Back</a>
                            </div>
                        </div>
                        <% } %>
            </section>










            <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    </body>

</html>